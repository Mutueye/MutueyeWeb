@keyframes alphashow
    0%
        visibility hidden
        opacity 0
        filter unquote('alpha(opacity=0)')
    100%
        visibility visible
        opacity 1
        filter unquote('alpha(opacity=100)')

@keyframes flyup
    0%
        visibility hidden
        opacity 0
        filter unquote('alpha(opacity=0)')
        transform translate3d(0,100%,0)
    100%
        visibility visible
        opacity 1
        filter unquote('alpha(opacity=100)')
        transform translate3d(0,0,0)

@keyframes flydown
    0%
        visibility hidden
        opacity 0
        filter unquote('alpha(opacity=0)')
        transform translate3d(0,-100%,0)
    100%
        visibility visible
        opacity 1
        filter unquote('alpha(opacity=100)')
        transform translate3d(0,0,0)

@keyframes flyleft
    0%
        visibility hidden
        opacity 0
        filter unquote('alpha(opacity=0)')
        transform translate3d(100%,0,0)
    100%
