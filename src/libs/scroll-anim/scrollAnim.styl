.scroll-anim
    visibility hidden
    -webkit-animation none
    -moz-animation none
    -ms-animation none
    -o-animation none
    animation none
.anim-fly-up
    &.anim-in
        -webkit-animation flyup 1s forwards
        -moz-animation flyup 1s forwards
        -ms-animation flyup 1s forwards
        -o-animation flyup 1s forwards
        animation flyup 1s forwards
.anim-fly-left
    &.anim-in
        -webkit-animation flyleft 1s forwards
        -moz-animation flyleft 1s forwards
        -ms-animation flyleft 1s forwards
        -o-animation flyleft 1s forwards
        animation flyleft 1s forwards
.anim-fly-right
    &.anim-in
        -webkit-animation flyright 1s forwards
        -moz-animation flyright 1s forwards
        -ms-animation flyright 1s forwards
        -o-animation flyright 1s forwards
        animation flyright 1s forwards
.anim-alpha-show
    &.anim-in
        -webkit-animation alphashow 1s forwards
        -moz-animation alphashow 1s forwards
        -ms-animation alphashow 1s forwards
        -o-animation alphashow 1s forwards
        animation alphashow 1s forwards
