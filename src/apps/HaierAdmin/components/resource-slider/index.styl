//index-news-slider
.rcs-slider
    height auto
    width auto
    .rcs-slider-item
        display block
        width auto
        .rcs-slider-img
            float left
            width 100%
            height 100%
    .owl-dots
        position absolute
        width 100%
        left 0
        font-size 0
        bottom 0.05rem
        .owl-dot
            span
                width 0.2rem !important
                height 0.06rem !important
                border-radius 0.04rem !important
                margin 0 0.02rem !important
            &.active
                span
                    background-color THEME_COLOR !important
    
    