/*!覆盖bootstrap相关样式*/
.btn
    border none
    &.btn-form
        border 1px solid GRAY_D6
    &.btn-capsule
        border-radius 2rem
        &.btn-sm
            padding-left 0.2rem
            padding-right 0.2rem
    &.btn-primary
        background-color THEME_COLOR
        &:hover
        &:active
        &:focus
            background-color darken(THEME_COLOR,20%)
            color WHITE
        &.disabled
        &[disabled]
            background-color THEME_COLOR
            color WHITE  
.modal-dialog
    margin DEFAULT_SPACE auto
.modal-content
    border none
    box-shadow 0 0 0.1rem 0.05rem alpha(BLACK,0.1)
    border-radius 2*COMMON_BORDER_RADIUS
    .btn-modal-close
        position absolute
        top 0.09rem
        right 0.08rem
