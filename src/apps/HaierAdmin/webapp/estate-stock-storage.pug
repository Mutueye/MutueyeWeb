block content
    .container-fluid.row-space-common
        .row.mt-space
            .col-xs-12
                .page-title 入库管理
            .col-xs-12
                .box-form.has-title.row-space-10
                    .box-form-title 查询条件
                    form#query_form.row.no-bottom(name='query_form')
                        .col-xs-12.col-xs-6.col-sm-4
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 采购单号：
                                input.form-control(type="text")
                        .col-xs-12.col-xs-6.col-sm-4
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 采购人：
                                input.form-control(type="text")
                        .col-xs-12.col-xs-6.col-sm-4
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 入库时间：
                                .input-group.date#in_time
                                    input.form-control(type="text")
                                    .btn.btn-line.input-group-addon
                                        i.fa.fa-calendar
                        .col-xs-12
                            .btn.btn-line.btn-small
                                i.fa.fa-search
                                |&nbsp;查询
            .col-xs-12
                .toolbar#toolbar
                    .btn.btn-theme#toolbtn_new
                        i.fa.fa-plus
                        |&nbsp;新增入库
                    .btn.btn-theme#toolbtn_edit
                        i.fa.fa-edit
                        |&nbsp;编辑
                    .btn.btn-theme#toolbtn_preview
                        i.fa.fa-eye
                        |&nbsp;查看
                table#table

                    
