@require 'dolphin/dolphin'

BODY_BG = WHITE
IMG_DIR = '../images/'
FONT_DIR = '../fonts/'
MIN_WIDTH = 1000px
MIN_HEIGHT = 500px
PAGE_WIDTH = 1200px
COMMON_LINE_HEIGHT = (20 / 14)
THEME_COLOR = darken(BLUE_OCEAN,10%)
THEME_COLOR_2 = lighten(#0f5a00,20%)


body
html
    background-color BODY_BG
    font-family 'Microsoft Yahei','微软雅黑'
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-tap-highlight-color rgba(255,255,255,0) //使移动端点击区域透明
    min-width PAGE_WIDTH
    min-height MIN_HEIGHT
    @media TABLET
        min-width 0
    @media MOBILE
        min-width 0

.main-content
    position absolute
    width 100%
    top 0
    bottom 0
    height auto
    display block
    overflow hidden
    min-width PAGE_WIDTH
    min-height MIN_HEIGHT

.dp-container
    min-width PAGE_WIDTH
    &.fixed-width
        width PAGE_WIDTH !important


