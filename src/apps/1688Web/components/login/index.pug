.login-content
    .login-topbar
        .login-logo
            //img(src='images/logo.png')
    form.login-box
        .row
            .col-xs-12
                .login-title 欢迎登录园区管理系统
            .col-xs-12
                .form-group
                    label 用户名、邮箱或手机号
                    .input-group.login-input-group
                        .input-group-addon
                            i.fa.fa-user
                        input.form-control(type='text' placeholder='用户名')
                .form-group
                    label 密码
                    .input-group.login-input-group
                        .input-group-addon
                            i.fa.fa-lock
                        input.form-control(type='password' placeholder='密码')
            .col-xs-7
                .form-group
                    .checkbox
                        label
                            input(type='checkbox')
                            |下次自动登录
            .col-xs-5
                a.btn.btn-block.btn-primary(href='index.html') 登录
    
