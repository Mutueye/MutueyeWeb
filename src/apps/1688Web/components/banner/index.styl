.banner
    width 100%
    height auto
    position relative
    overflow hidden
    img
        width 100%
        height auto
        float left
    .banner-title-content
        position absolute
        bottom 0
        left 0
        right 0
        height auto
        .banner-title
            color WHITE
            font-size 0.36rem
            letter-spacing 0.1rem
            margin-bottom 0.8rem
            position relative
            float left
            &:before
                content ""
                position absolute
                left 0
                bottom -0.1rem
                right 0.1rem
                height 0.02rem
                background-color WHITE

.mobile
    .banner
        .banner-title-content
            .banner-title
                margin-left 0.1rem
                font-size 0.16rem
                letter-spacing 0.03rem
                margin-bottom 0.2rem
                &:before
                    right 0.03rem
                    height 0.01rem
                    bottom -0.02rem
