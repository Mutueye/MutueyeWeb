.m-slider
    width 100%
    display block
    .item
        width 100%
        height auto
        display block
        .item-bg
            width 100%
            height auto
            img
                width 100%
                height auto
                display block
                flaot left
        .abs-container
            .abs-content
                .item-bg
                    position absolute
                    left 0
                    right 0
                    bottom 0
                    top 0
                    img
                        width 100%
                        height 100%
    .owl-dots
        position absolute
        width 100%
        left 0
        font-size 0
        margin-top 0.02rem !important
        top 100%
        .owl-dot
            span
                width 0.1rem !important
                height 0.02rem !important
                padding 0 !important
                margin 0.02rem 0.02rem !important
                border-radius 0
                opacity 0.4
                background-color GRAY_66
            &.active
            &:hover
                span
                    opacity 1
                    background-color THEME_COLOR !important
