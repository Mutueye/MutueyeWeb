//覆盖bootstrap相关样式
.btn
    border none
    &.btn-form
        border 1px solid GRAY_D6
    &.btn-capsule
        border-radius 2rem
        &.btn-sm
            padding-left 0.2rem
            padding-right 0.2rem
.modal-dialog
    margin DEFAULT_SPACE auto
.modal-content
    border none
    box-shadow 0 0 0.1rem 0.05rem alpha(BLACK,0.1)
    border-radius 2*COMMON_BORDER_RADIUS
    .btn-modal-close
        position absolute
        top 0.09rem
        right 0.08rem
/*
.form-group:last-child
    margin-bottom 0
*/
.pagination
    width 100%
    margin 0
    font-size 0
    text-align center
    li
        display inline-block
        a
            color GREEN
        &.active
            a
                background-color GREEN !important
                border-color GREEN !important
                color WHITE
    &.pagination-article-list
        margin-top 0.3rem
        li
            font-size 0.12rem
            display inline-block
            a
                color THEME_COLOR
            &.active
                a
                    background-color THEME_COLOR !important
                    border-color THEME_COLOR !important
                    color WHITE

.form-control
    //border-color GRAY_E3
    &:focus
        box-shadow inset 0 1px 1px rgba(0,0,0,0.075)
        border-color THEME_COLOR

.simple-tabs
    padding-top 0
    border-left 1px solid TODO_BORDER_COLOR
    border-right 1px solid TODO_BORDER_COLOR
    background-color GRAY_F9
    > li
        > a
            margin-left 0
            margin-right 0
            border-radius 0
            padding 0.06rem 0.12rem


legend
    margin-bottom DEFAULT_SPACE

$SCREEN_LG = 1400px
$SCREEN_WD = 1200px
$SCREEN_MD = 940px
$SCREEN_SM = 768px

$CONTAINER_LG = 1200px
$CONTAINER_WD = 1060px
$CONTAINER_MD = 800px
$CONTAINER_SM = 560px


.container
    @media (min-width $SCREEN_SM)
        width $CONTAINER_SM
    @media (min-width $SCREEN_MD)
        width $CONTAINER_MD
    @media (min-width $SCREEN_WD)
        width $CONTAINER_WD
    @media (min-width $SCREEN_LG)
        width $CONTAINER_LG

.desktop
    .container
        @media (min-width $SCREEN_SM)
            width $CONTAINER_MD
        @media (min-width $SCREEN_MD)
            width $CONTAINER_MD
        @media (min-width $SCREEN_WD)
            width $CONTAINER_WD
        @media (min-width $SCREEN_LG)
            width $CONTAINER_LG