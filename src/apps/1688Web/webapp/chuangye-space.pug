extends layout

block redirect
    script(src=JS_DIR + 'browserRedirect.js')

block css
    link(rel='stylesheet', href= CSS_DIR + 'font-awesome.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-select.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'toastr.min.css')
    link(rel='stylesheet', href= CSS_DIR + 'index.css')

block content
    .main-content
        include ../components/topbar/index-chuangye
        .body-mask
        .main-body
            .topbar-space
            include ../components/banner/banner-chuangye-space
            .row-space-10
                .container.tp-container
                    .row.no-bottom
                        .col-xs-12
                            form.box-form.bg-white
                                .form-group.form-group-sm.cool-form-group
                                    .control-label.cool-form-label.text-right 孵化领域：
                                    .input-group
                                        select.form-control.selectpicker(id='field_list' name='field_list' title='请选择创业领域' data-actions-box='true'  multiple)
                                            option 信息技术
                                            option 生物医药
                                            option 文化创意
                                            option 低碳环保
                                            option 大数据
                                            option 云计算
                                            option 物联网
                                            option 机器人
                                            option 其他
                                        .input-group-addon.btn.btn-line &nbsp;&nbsp;筛选&nbsp;&nbsp;
                        .col-xs-12.col-sm-12.col-md-6
                            a.org-li(href='chuangye-space-detail.html')
                                .org-li-img
                                    img(src=IMG_DIR + 'rcs-item-01.jpg')
                                .org-li-content
                                    .org-li-title 孵化器名称
                                    .org-li-info 领域：制造业&nbsp;&nbsp;&nbsp;面积：300平米
                                    .org-li-info.max-2line 地址：地址信息
                        .col-xs-12.col-sm-12.col-md-6    
                            a.org-li(href='chuangye-space-detail.html')
                                .org-li-img
                                    img(src=IMG_DIR + 'rcs-item-02.jpg')
                                .org-li-content
                                    .org-li-title 孵化器名称
                                    .org-li-info 领域：制造业&nbsp;&nbsp;&nbsp;面积：300平米
                                    .org-li-info.max-2line 地址：地址信息
                        .col-xs-12.col-sm-12.col-md-6
                            a.org-li(href='chuangye-space-detail.html')
                                .org-li-img
                                    img(src=IMG_DIR + 'rcs-item-03.jpg')
                                .org-li-content
                                    .org-li-title 孵化器名称
                                    .org-li-info 领域：制造业&nbsp;&nbsp;&nbsp;面积：300平米
                                    .org-li-info.max-2line 地址：地址信息
                        .col-xs-12
                            include ../components/pagination/index
            include ../components/footer/index
            include ../components/sidebar/index

