extends layout

block css
    link(rel='stylesheet', href= CSS_DIR + 'font-awesome.min.css')
    link(rel='stylesheet', href= CSS_DIR + 'owl.carousel.min.css')
    link(rel='stylesheet', href= CSS_DIR + 'owl.theme.default.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrapValidator.min.css')
    link(rel='stylesheet', href=JS_DIR + 'iCheck/skins/square/_all.css')
    link(rel='stylesheet', href=CSS_DIR + 'toastr.min.css')
    link(rel='stylesheet', href= CSS_DIR + 'index-m.css')

block content
    .main-content
        include ../components/topbar/index-m
        .body-mask
        .main-body
            .topbar-space
            .row-space-10
                .container.tp-container
                    .tp-content
                        .deco-box
                        .tp-content-title
                            |用户注册
                            .tp-content-title-deco
                                |中艺1688
                                br
                                |SHANDONG ARTEX
                        .tp-content-inner
                            form.row.no-bottom#regist_form(name='regist_form')
                                .col-xs-12
                                    .form-group.cool-form-group.form-group-sm
                                        .cool-form-label.text-right.control-label 用户名：
                                        input.form-control(type='text' name='username' id='username')
                                .col-xs-12
                                    .form-group.cool-form-group.form-group-sm
                                        .cool-form-label.text-right.control-label 手机号：
                                        input.form-control(type='text' name='phone' id='phone')
                                .col-xs-12
                                    .form-group.cool-form-group.form-group-sm
                                        .cool-form-label.text-right.control-label 密码：
                                        input.form-control(type='password' name='password' id='password')
                                .col-xs-12
                                    .form-group.cool-form-group.form-group-sm
                                        .cool-form-label.text-right.control-label 确认密码：
                                        input.form-control(type='password' name='vpassword' id='vpassword')
                                .col-xs-12
                                    .form-group.cool-form-group.form-group-sm
                                        .cool-form-label.text-right.control-label 验证码：
                                        input.form-control(type='text' name='vcode' id='vcode')
                                .col-xs-12
                                    label.icheck-label
                                        input(type='checkbox' name='checkbox_agree' id='checkbox_agree')
                                        .icheck-text(style="display:inline-block; vertical-align: middle; height:22px; line-height:22px; font-weight:normal; font-size:13px;") &nbsp;我已阅读并同意
                                    a(style="display:inline-block; height:22px; vertical-align: middle; line-height:22px; text-decoration:underline !important; font-weight:bold; font-size:13px;" href="#") 使用条例
                                .col-xs-12
                                    .btn.btn-block.btn-theme#btn_submit
                                        i.fa.fa-upload
                                        |&nbsp;提交注册
                                .col-xs-12.mt-space.text-center
                                    span 已有账号？
                                    a(style="cursor:pointer; text-decoration:underline;" href="m-login.html") 立即登录
        include ../components/m-footnav/index
block js
    script(src=JS_DIR + 'jquery.min.js')
    script(src=JS_DIR + 'bootstrap.min.js')
    script(src=JS_DIR + 'iCheck/icheck.min.js')
    script(src=JS_DIR + 'bootstrapvalidator/bootstrapValidator.min.js')
    script(src=JS_DIR + 'bootstrapvalidator/zh_CN.js')
    script(src=JS_DIR + 'toastr.min.js')
    script(src=JS_DIR + 'BSModal.js')
    script(src=JS_DIR + 'common.js')
    script(src=JS_DIR + 'app-m.js')
block pagejs
    script(src=JS_DIR + 'regist.js')
    

        
