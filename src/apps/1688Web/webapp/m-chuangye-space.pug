extends layout

block css
    link(rel='stylesheet', href= CSS_DIR + 'font-awesome.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-select.min.css')
    link(rel='stylesheet', href= CSS_DIR + 'index-m.css')
        

block content
    .main-content
        include ../components/topbar/index-m
        .main-body
            .topbar-space
            include ../components/banner/banner-chuangye-space
            .container.tp-container.row-space-10
                .row.no-bottom
                    .col-xs-12
                        .tp-content.no-padding
                            .tp-content-title
                                |众创空间
                                .tp-content-title-deco
                                    |中艺1688
                                    br
                                    |SHANDONG ARTEX
                    .col-xs-12
                        form.box-form.bg-white
                            .row.no-bottom
                                .col-xs-12
                                    .form-group.form-group-sm.cool-form-group
                                        .control-label.cool-form-label.text-right 孵化领域：
                                        select.form-control.selectpicker(id='field_list' name='field_list' title='请选择创业领域' data-actions-box='true'  multiple)
