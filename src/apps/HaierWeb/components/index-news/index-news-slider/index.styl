INS_LEFT = 2.5rem
INS_HEIGHT = 2rem
INS_IMG_WHP = 3
INS_TITLE_FSIZE = 0.16rem
INS_TITLE_FSIZE_MOBILE = 0.14rem
INS_INFO_FSIZE = 0.14rem
INS_INFO_FSIZE_MOBILE = 0.1rem


.index-news-divider
    position absolute
    width 1px
    background-color GRAY_E3
    top INDEX_NEWS_SPACE
    bottom INDEX_NEWS_SPACE
    right 0
    @media SCREEN_SM
        width auto
        height 1px
        top auto
        bottom 0
        left INDEX_NEWS_SPACE_MOBILE
        right INDEX_NEWS_SPACE_MOBILE
    @media SCREEN_XS
        width auto
        height 1px
        top auto
        bottom 0
        left INDEX_NEWS_SPACE_MOBILE
        right INDEX_NEWS_SPACE_MOBILE

//index-news-slider
.ins
    height auto
    width auto
    .ins-item
        display block
        width auto
        padding INDEX_NEWS_SPACE 
        position relative
        height INS_HEIGHT
        @media SCREEN_SM
            height auto
            margin-bottom 0.1rem
        @media SCREEN_XS
            height auto
            margin-bottom 0.1rem
        .ins-img
            float left
            width 100%
            height 100%
        .ins-content
            width auto
            margin-top 0.1rem
            .ins-title
                font-size INS_TITLE_FSIZE
                color GRAY_33
                width 100%
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                margin-bottom 0.05rem
            .ins-info
                font-size INS_INFO_FSIZE
                color GRAY_66
                width 100%
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
    .owl-dots
        position absolute
        width 100%
        left 0
        font-size 0
        bottom INDEX_NEWS_SPACE
        .owl-dot
            span
                width 0.2rem !important
                height 0.06rem !important
                border-radius 0.04rem !important
                margin 0 0.02rem !important
            &.active
                span
                    background-color THEME_COLOR !important

.mobile
    .ins
        .ins-item
            padding INDEX_NEWS_SPACE_MOBILE 
            height auto
            margin-bottom 0.02rem
            .ins-content
                margin-top 0.05rem
                .ins-title
                    font-size INS_TITLE_FSIZE_MOBILE
                    color GRAY_33
                    width 100%
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
                    margin-bottom 0
                .ins-info
                    font-size INS_INFO_FSIZE_MOBILE
                    color GRAY_66
                    width 100%
                    overflow hidden
                    text-overflow ellipsis
                    white-space nowrap
        .owl-dots
            position absolute
            width 100%
            left 0
            font-size 0
            bottom 0.7*INDEX_NEWS_SPACE_MOBILE
            .owl-dot
                span
                    width 0.1rem !important
                    height 0.02rem !important
                    border-radius 0.04rem !important
                    margin 0 0.01rem !important
                &.active
                    span
                        background-color THEME_COLOR !important
    
    