.mobile
    .first-margin
        margin-bottom 0.5*PITEM_HEIGHT_XS + SLIDER_BOTTOM_SPACE_XS
    .carousel
        .navi-prev
        .navi-next
            display none
        .slider-pagination
            bottom -0.5*PITEM_HEIGHT_XS
            .slider-pagination-item
                height PITEM_HEIGHT_XS
                .slider-pagination-timer
                    height 0.015rem
                .slider-pagination-divider
                    transform scaleX(0.5)
                    top 2*PITEM_HEIGHT_ACTIVE_XS
                    bottom 2*PITEM_HEIGHT_ACTIVE_XS
                .slider-pagination-content
                    left 3*PITEM_HEIGHT_ACTIVE_XS
                    top 3*PITEM_HEIGHT_ACTIVE_XS
                    right 3*PITEM_HEIGHT_ACTIVE_XS
                    bottom padding 3*PITEM_HEIGHT_ACTIVE_XS
                    .slider-pagination-title
                        line-height 1.1
                        margin-bottom 0.01rem
                        font-size PITEM_TITLE_FSIZE_XS
                    .slider-pagination-info
                        font-size PITEM_INFO_FSIZE_XS
                &.active
                    height PITEM_HEIGHT_XS + PITEM_HEIGHT_ACTIVE_XS
                    margin-top -1*PITEM_HEIGHT_ACTIVE_XS
                    .slider-pagination-divider
                        display none

.desktop
    .carousel
        .slider-pagination
            .slider-pagination-item:hover
                background-color THEME_COLOR
                &.active
                    background-color BLUE_EBONYCLAY

.wait-in
    transform translateX(100%)
.next-in
    animation nextinkey 0.5s ease forwards
.next-out
    animation nextoutkey 0.5s ease forwards
.prev-in
    animation previnkey 0.5s ease forwards
.prev-out
    animation prevoutkey 0.5s ease forwards




@keyframes nextinkey
    0%
        transform translateX(100%)
    100%
        transform translateX(0)


@keyframes nextoutkey
    0%
        transform translateX(0)
    100%
        transform translateX(-100%)

@keyframes previnkey
    0%
        transform translateX(-100%)
    100%
        transform translateX(0)

@keyframes prevoutkey
    0%
        transform translateX(0)
    100%
        transform translateX(100%)
