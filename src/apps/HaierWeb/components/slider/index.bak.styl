PITEM_HEIGHT_LG = 1.04rem
PITEM_HEIGHT_WD = 0.9rem
PITEM_HEIGHT_MD = 0.7rem
PITEM_HEIGHT_SM = 0.6rem
PITEM_HEIGHT_XS = 0.34rem

PITEM_TITLE_FSIZE_LG = 0.2rem
PITEM_TITLE_FSIZE_WD = 0.18rem
PITEM_TITLE_FSIZE_MD = 0.16rem
PITEM_TITLE_FSIZE_SM = 0.12rem
PITEM_TITLE_FSIZE_XS = 0.075rem

PITEM_INFO_FSIZE_LG = 0.14rem
PITEM_INFO_FSIZE_WD = 0.13rem
PITEM_INFO_FSIZE_MD = 0.12rem
PITEM_INFO_FSIZE_SM = 0.12rem
PITEM_INFO_FSIZE_XS = 0.07rem

PITEM_HEIGHT_ACTIVE_LG = 0.07rem
PITEM_HEIGHT_ACTIVE_WD = 0.06rem
PITEM_HEIGHT_ACTIVE_MD = 0.04rem
PITEM_HEIGHT_ACTIVE_SM = 0.03rem
PITEM_HEIGHT_ACTIVE_XS = 0.02rem

PITEM_COLOR = lighten(THEME_COLOR,20%)
PITEM_COLOR_ACTIVE = BLUE_EBONYCLAY



SLIDER_BOTTOM_SPACE = 0.3rem
SLIDER_BOTTOM_SPACE_XS = 0.08rem

.first-margin
    margin-bottom 0.5*PITEM_HEIGHT_WD + SLIDER_BOTTOM_SPACE

.carousel
    width 100%
    display block
    background-color BLACK
    overflow visible
    .item
        width 100%
        height 100%
        display block
        position absolute
        overflow hidden
        z-index 1
        .item-bg
            width 100%
            height 100%
            position absolute
            img
                width 100%
                height 100%
                display block
                position absolute
        &.active
            display block
            z-index 2
            

    .navi-prev
    .navi-next
        width 0.5rem
        height 0.6rem
        background-color alpha(BLACK, 0.2)
        position absolute
        z-index 10
        border-radius COMMON_BORDER_RADIUS
        cursor pointer
        opacity 0.2
        transition all 0.5s ease
        background-image url(IMG_DIR + 'slider-arrow.png')
        background-repeat no-repeat
        &:hover
            background-color alpha(BLACK, 0.8)
    .navi-prev
        left 30px
        top 50%
        margin-top -30px
        background-position 0px 0px
    .navi-next
        right 30px
        top 50%
        margin-top -30px
        background-position 0px -60px
    .slider-pagination
        display block
        position absolute
        left 0
        right 0
        width 100%
        text-align center
        bottom -0.5*PITEM_HEIGHT_WD
        margin 0
        z-index 11
        text-align center
        .container
            text-align center
            font-size 0
        .slider-pagination-item
            display inline-block
            //float left
            width 16.66666667%
            height PITEM_HEIGHT_WD
            border-radius 0
            background-color PITEM_COLOR
            cursor pointer
            transition all COMMON_ANIM_TIME ease
            position relative
            overflow hidden
            .slider-pagination-timer
                width 0%
                height 0.03rem
                background-color YELLOW_CASABLANCA
                position absolute
                bottom 0
                z-index 999
                display none
            .slider-pagination-divider
                position absolute
                width 1px
                right 0
                background-color lighten(PITEM_COLOR, 30%)
                top 2*PITEM_HEIGHT_ACTIVE_WD
                bottom 2*PITEM_HEIGHT_ACTIVE_WD
                display block
            .slider-pagination-content
                position absolute
                left 3*PITEM_HEIGHT_ACTIVE_WD
                top 3*PITEM_HEIGHT_ACTIVE_WD
                right 3*PITEM_HEIGHT_ACTIVE_WD
                bottom padding 3*PITEM_HEIGHT_ACTIVE_WD
                .slider-pagination-title
                    word-wrap break-word
                    word-break break-all
                    font-size PITEM_TITLE_FSIZE_WD
                    color WHITE
                    text-align left
                .slider-pagination-info
                    word-wrap break-word
                    word-break break-all
                    display none
                    font-size PITEM_INFO_FSIZE_WD
                    color alpha(WHITE, 0.7)
                    text-align left
                    line-height 1.1
            &.active
                width 33.33333333%
                height PITEM_HEIGHT_WD + PITEM_HEIGHT_ACTIVE_WD
                margin-top -1*PITEM_HEIGHT_ACTIVE_WD
                background-color PITEM_COLOR_ACTIVE
                border-right none
                cursor default
                .slider-pagination-timer
                    display block
                .slider-pagination-divider
                    display none
                .slider-pagination-content
                    .slider-pagination-title
                        width 100%
                        text-overflow ellipsis
                        white-space nowrap
                        word-break normal
                        word-wrap normal
                        overflow hidden
                    .slider-pagination-info
                        display block
                        
    &:hover
        .navi-prev
        .navi-next
            opacity 1

