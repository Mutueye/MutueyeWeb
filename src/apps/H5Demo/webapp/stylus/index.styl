@require 'color'
@require 'variables'
@require 'utils'
@require 'iconfont'


a
    text-decoration none !important
    &:hover
    &:active
        text-decoration none !important
ul
    -webkit-padding-start 0

html
    -webkit-text-size-adjust none
    font-size BODY_FONT_SIZE //1rem = 100px...1px=0.01rem
    height 100%

body
    font-size 0.14rem//14px
    line-height COMMON_LINE_HEIGHT
    background-color BODY_BG
    font-family 'Microsoft Yahei','微软雅黑','Droid Sans','HanHei SC', 'PingFang SC', 'STHeitiSC-Light', 'Arial', sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-tap-highlight-color rgba(255,255,255,0) //使移动端点击区域透明
    height 100%
    margin 0

.btn
.touch-acitve
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none

.mt-space
    margin-top 0.08rem

.main-content
    width 100%
    height auto
    min-height 100%
    display flex
    overflow hidden
    position relative
    background-color BODY_BG
    z-index 1
    font-size 0
    line-height 0
    flex-direction column
    justify-content center
    align-items center


.loading-text
    color WHITE
    font-size 0.14rem
    text-align center
    height 0.3rem
    line-height 0.3rem
    width 1rem
    text-align center
    position absolute
    left 50%
    margin-left -0.5rem
    bottom 0.3rem
