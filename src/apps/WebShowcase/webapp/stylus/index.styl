@require '../../../../libs/bootstrap-stylus/bootstrap/index'
@require 'color'
@require 'variables'
@require 'utils'
@require 'iscroll'


a
    text-decoration none !important
    &:hover
    &:active
        text-decoration none !important

html
    -webkit-text-size-adjust none
    font-size 100px //1rem = 100px...1px=0.01rem

body
    font-size 0.14rem//14px
    line-height COMMON_LINE_HEIGHT
    background-color BODY_BG
    font-family 'Microsoft Yahei','微软雅黑','Droid Sans','HanHei SC', 'PingFang SC', 'STHeitiSC-Light', 'Arial', sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    -webkit-tap-highlight-color rgba(255,255,255,0) //使移动端点击区域透明

.main-content
    width 100%
    height auto
    display block
    overflow hidden
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color BODY_BG
    z-index 1
    .top-container
        position absolute
        left 0
        top 0
        right 0
        height TOP_HEIGHT
        z-index Z_INDEX_TOP
    .footer-container
        position absolute
        left LEFT_WIDTH
        right 0px
        bottom 0px
        height FOOTER_HEIGHT
        z-index Z_INDEX_FOOTER
    @media SCREEN_XS
        .top-container
            height TOP_HEIGHT_MOBILE
            
.iscroller {
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-text-size-adjust: none;
    -moz-text-size-adjust: none;
    -ms-text-size-adjust: none;
    -o-text-size-adjust: none;
    text-size-adjust: none;
}

.main-iframe
    width 100%
    height 100%


.border-round
    border-radius COMMON_BORDER_RADIUS !important
    .text-slider-item
        border-radius COMMON_BORDER_RADIUS !important
.border-round2x
    border-radius 2*COMMON_BORDER_RADIUS !important
    .text-slider-item
        border-radius 2*COMMON_BORDER_RADIUS !important
.has-shadow
    box-shadow 0 0 0.05rem 0.03rem alpha(BLACK,0.02) !important


//计算row 和col 间距
CacuRowSpace(space_num)
    &.container
    &.container-fluid
        padding-left space_num
        padding-right space_num
    .row
        margin-left -0.5*space_num
        margin-right -0.5*space_num
        for i in (1..12)
            .col-xs-{i}
            .col-sm-{i}
            .col-md-{i}
            .col-lg-{i}
                padding-left 0.5*space_num
                padding-right 0.5*space_num
                margin-bottom space_num
                &.abs-container
                    padding 0
                    margin 0
                    .abs-content
                        left 0.5*space_num
                        right 0.5*space_num
                        bottom space_num
        &.top-row
            margin-top space_num

.row-space-10
    CacuRowSpace(0.1rem)

.row-space-20
    CacuRowSpace(0.2rem)

.row-space-common
    CacuRowSpace(0.2rem)
    @media SCREEN_XS
        CacuRowSpace(0.06rem)

cacuHeightPct(pct,total)
    padding-top (pct/total)*100 + '%'

.abs-container
    position relative
    &:before
        display block
        content ""
        width 100%
.abs-content
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    box-sizing border-box
    img
        width 100%
        height 100%
        float left

for i in (1..20)
    for j in range(1,i)
        .abs-hp-{j}of{i}
            &:before
                cacuHeightPct(j,i)
        .abs-hp-{i}of{j}
            &:before
                cacuHeightPct(i,j)

@media SCREEN_XS
    for i in (1..20)
        for j in range(1,i)
            .abs-hp-mobile-{j}of{i}
                &:before
                    cacuHeightPct(j,i)
            .abs-hp-mobile-{i}of{j}
                &:before
                    cacuHeightPct(i,j)
            

//覆盖bootstrap相关样式
.btn
    border none
    &.btn-form
        border 1px solid GRAY_D6
    &.btn-capsule
        border-radius 2rem
        &.btn-sm
            padding-left 0.2rem
            padding-right 0.2rem
.modal-dialog
    margin DEFAULT_SPACE
.modal-content
    border none
    box-shadow 0 0 0.1rem 0.05rem alpha(BLACK,0.1)
    border-radius 2*COMMON_BORDER_RADIUS
    .btn-modal-close
        position absolute
        top 0.09rem
        right 0.08rem

.form-group:last-child
    margin-bottom 0

.pagination
    width 100%
    margin 0
    font-size 0
    text-align center
    li
        display inline-block
        a
            color GREEN
        &.active
            a
                background-color GREEN !important
                border-color GREEN !important
                color WHITE

.form-control
    border-color GRAY_E3
    &:focus
        box-shadow inset 0 1px 1px rgba(0,0,0,0.075)
        border-color THEME_COLOR


legend
    margin-bottom DEFAULT_SPACE

.top-tip
    position fixed
    width 3.6rem
    height auto
    //line-height 0.52rem
    padding 0.12rem
    font-size 0.16rem
    text-align center
    color WHITE
    background-color alpha(BLACK,0.8)
    top -2rem
    left 50%
    margin-left -1.8rem
    z-index 9999
    transition all COMMON_ANIM_TIME ease-in-out
    border-radius COMMON_BORDER_RADIUS
    &.show
        top 0.4rem
.mobile
    .top-tip
        width auto
        left 0.4rem
        right 0.4rem
        margin-left 0

@require '../../components/topbar/index'
@require '../../components/imagebox/index'




