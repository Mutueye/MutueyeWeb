LOGO_WIDTH = LEFT_WIDTH
LOGO_WIDTH_MOBILE = 1.28rem
LOGO_HEIGHT = TOP_HEIGHT
LOGO_HEIGHT_MOBILE = TOP_HEIGHT_MOBILE
LOGO_TEXT_SPACE = 0.1rem
LOGO_LEFT_SPACE = 0.12rem
BTN_HEIGHT = 0.4rem

POPMENU_BG_COLOR = WHITE
POPMENU_TEXT_COLOR = GRAY_33
POPMENU_ARROW_COLOR = THEME_COLOR

.topbar
    width auto
    height TOP_HEIGHT
    display block
    background-color THEME_COLOR
    position relative
    z-index 99999
    .logo
        width LOGO_WIDTH
        height LOGO_HEIGHT
        line-height LOGO_HEIGHT
        float left
        display block
        margin-top 0.5*(TOP_HEIGHT - LOGO_HEIGHT)
        //margin-left LOGO_LEFT_SPACE
        //background-image url(IMG_DIR + 'logo.png')
        background-repeat no-repeat
        background-position center center
        //padding-left LOGO_WIDTH + LOGO_TEXT_SPACE
        letter-spacing 0.02rem
        font-size 0.18rem
        color WHITE
        text-decoration none
        text-align center
        background-color darken(THEME_COLOR,12%)
        cursor pointer
    .right-shoulder
        height BTN_HEIGHT
        margin-top 0.5*(TOP_HEIGHT - BTN_HEIGHT)
        margin-right 0.5*(TOP_HEIGHT - BTN_HEIGHT)
        display block
        float right
        font-size 0
        line-height BTN_HEIGHT
        .btn-topbar
            background-color transparent
            color WHITE
            border none
            border-radius COMMON_BORDER_RADIUS
            height BTN_HEIGHT
            line-height BTN_HEIGHT
            padding 0 0.12rem
            &:hover
                background-color WHITE
                color THEME_COLOR
            /*
            .popmenu-arrow
                display none*/
        .open
            .btn-topbar
                background-color WHITE
                color THEME_COLOR
                /*
                .popmenu-arrow
                    border-arrow(POPMENU_ARROW_COLOR,0.1rem,up)
                    position absolute
                    top 100%
                    margin-top 0.08rem
                    margin-left -0.1rem
                    left 50%
                    display block*/
        .dropdown-menu
            left auto
            right 0
            border-left none
            border-right none
            border-bottom none
            border-top-left-radius 0
            border-top-right-radius 0
            border-bottom-left-radius COMMON_BORDER_RADIUS
            border-bottom-right-radius COMMON_BORDER_RADIUS
    @media SCREEN_SM
        height TOP_HEIGHT_MOBILE
        .logo
            display none
        .right-shoulder
            margin-top 0.5*(TOP_HEIGHT_MOBILE - BTN_HEIGHT)
            margin-right 0.5*(TOP_HEIGHT_MOBILE - BTN_HEIGHT)
    @media SCREEN_XS
        height TOP_HEIGHT_MOBILE
        .logo
            display none
        .right-shoulder
            margin-top 0.5*(TOP_HEIGHT_MOBILE - BTN_HEIGHT)
            margin-right 0.5*(TOP_HEIGHT_MOBILE - BTN_HEIGHT)




.popmenu-box
    border-top 2px solid POPMENU_ARROW_COLOR
    top 100%
    margin-top 0.2rem
    background-color POPMENU_BG_COLOR
    padding 0.14rem
    border-radius COMMON_BORDER_RADIUS
    list-style none
    font-size 0px
    min-width auto
    box-shadow 0 0.05rem 0.14rem 0.02rem rgba(0, 0, 0, 0.1)
    @media SCREEN_SM
        margin-top 0.16rem
    @media SCREEN_XS
        margin-top 0.16rem
    &:before
        content ""
        border-arrow(POPMENU_ARROW_COLOR,0.1rem,up)
        position absolute
        bottom 100%
        margin-left -0.1rem
        left 50%
        display block
    li
        width auto
        display block
        .btn-popmenu
            display block
            white-space nowrap
            border none
            //line-height 42px !important
            //height 42px !important
            padding 0.09rem 0.12rem
            border-radius COMMON_BORDER_RADIUS
            background-color POPMENU_BG_COLOR !important
            color POPMENU_TEXT_COLOR
            &:hover
                color POPMENU_TEXT_COLOR
                background-color darken(POPMENU_BG_COLOR,10%) !important

.topbar-space
  width 100%
  height TOP_HEIGHT
  display block

