OA_MB_BG = alpha(BLACK, 0.7)
OA_MB_BG_ACTIVE = alpha(BLACK, 0.8)
OA_MB_HANDLER_WIDTH = 1rem
OA_MB_HANDLER_HEIGHT = 0.12rem
.oa-message-box
    z-index 50
    position absolute
    right 0
    left LEFT_WIDTH
    height TOP_HEIGHT
    background-color OA_MB_BG
    transition all COMMON_ANIM_TIME ease
    top 0
    .oa-message-box-container
        display block
        width 100%
        height auto
        overflow hidden
        .oa-message-item
            padding 0 0.3rem
            display block
            text-align center
            text-overflow ellipsis
            overflow hidden
            white-space nowrap
            font-size 0.16rem
            color WHITE
            line-height TOP_HEIGHT
    .oa-message-box-handler
        position absolute
        top 100%
        left 50%
        margin-left -0.5*OA_MB_HANDLER_WIDTH
        width OA_MB_HANDLER_WIDTH
        height OA_MB_HANDLER_HEIGHT
        background-color OA_MB_BG
        background-image url(IMG_DIR + 'menu-folder-collapsed.png')
        background-repeat no-repeat
        background-position center center
        cursor pointer
        .oa-message-box-handler-deco
            position absolute
            top 0
            width OA_MB_HANDLER_HEIGHT
            height OA_MB_HANDLER_HEIGHT
            overflow hidden
            background-color transparent
            &.left
                left -1*OA_MB_HANDLER_HEIGHT
                &:before
                    content ""
                    position absolute
                    border-arrow(OA_MB_BG, OA_MB_HANDLER_HEIGHT, down)
                    left 0
                    top 0
            &.right
                right -1*OA_MB_HANDLER_HEIGHT
                &:before
                    content ""
                    position absolute
                    border-arrow(OA_MB_BG, OA_MB_HANDLER_HEIGHT, down)
                    right 0
                    top 0
        &:hover
            background-color OA_MB_BG_ACTIVE
            .oa-message-box-handler-deco
                &.left:before
                &.right:before
                    border-arrow(OA_MB_BG_ACTIVE, OA_MB_HANDLER_HEIGHT, down)
    &.opened
        top TOP_HEIGHT
        .oa-message-box-handler
            background-image url(IMG_DIR + 'menu-folder-opened.png')

