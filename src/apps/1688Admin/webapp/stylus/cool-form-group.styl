COOL_FORM_LABEL_WIDTH = 1.2rem
COOL_FORM_LABEL_SPACE = 0.05rem
COOL_FORM_LINE_HEIGHT = 0.34rem
COOL_FORM_LINE_HEIGHT_SM = 0.3rem
COOL_FORM_FLUID_SPACE = 0.1rem
COOL_FORM_CONTENT_LINE_HEIGHT = 0.18rem
.cool-form-group
    width auto
    padding-left COOL_FORM_LABEL_WIDTH + COOL_FORM_LABEL_SPACE
    position relative
    margin-bottom 0
    background-color GRAY_F5
    .cool-form-label
        line-height COOL_FORM_LINE_HEIGHT
        position absolute
        width COOL_FORM_LABEL_WIDTH + COOL_FORM_LABEL_SPACE
        left 0
        padding-right COOL_FORM_LABEL_SPACE
    .cool-form-content
        line-height COOL_FORM_CONTENT_LINE_HEIGHT
        color GRAY_33
        background-color #fbfbfb
        padding 0.5*(COOL_FORM_LINE_HEIGHT - COOL_FORM_CONTENT_LINE_HEIGHT) COOL_FORM_LABEL_SPACE
        a:hover
            text-decoration underline !important
    .cool-form-image
        display block
        height auto
        box-sizing border-box
        border 1px solid #cccccc
        overflow hidden
        padding 0.04rem
        img
            width 100%
            height auto
            float left
    .form-control
        border-radius 0
        box-shadow none
        &.input-file
            padding 0.04rem
        &.textarea
            height auto
            resize none
    .input-group
        .input-group-addon
            border-radius 0 !important
    .file-input
        .btn
            margin-left auto
            border-radius 0
            &.btn-file
                margin-right -1px
            &.btn-default
                background-color GRAY_F5
    &.form-group-sm
        .cool-form-label
            height COOL_FORM_LINE_HEIGHT_SM
            line-height COOL_FORM_LINE_HEIGHT_SM
        .cool-form-content
            line-height COOL_FORM_CONTENT_LINE_HEIGHT
            padding 0.5*(COOL_FORM_LINE_HEIGHT_SM - COOL_FORM_CONTENT_LINE_HEIGHT) COOL_FORM_LABEL_SPACE
        .form-control
            height COOL_FORM_LINE_HEIGHT_SM
            padding 0.03rem
            &.textarea
                height auto
        .file-input
            .btn
                padding 0.05rem 0.12rem
    &.cool-form-fluid
        padding 0
        margin-right COOL_FORM_FLUID_SPACE
        float left
        .cool-form-label
            position static
            width auto
            display inline-block
        .form-control
            display inline-block
        &.pull-right
            margin-right 0
            margin-left COOL_FORM_FLUID_SPACE

.summernote-title
    width 100%
    background-color transparent

.note-editor.note-frame
    margin-bottom 0.1rem
    border 1px solid GRAY_CC
    box-shadow none
    .panel-heading
        border-top-left-radius COMMON_BORDER_RADIUS
        border-top-right-radius COMMON_BORDER_RADIUS
    .note-statusbar
        border-bottom-left-radius COMMON_BORDER_RADIUS
        border-bottom-right-radius COMMON_BORDER_RADIUS

