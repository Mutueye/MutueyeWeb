/*! utils */

//hidden & visible
.hidden
    display none !important
.mobile-hidden
    display block !important
    @media MOBILE
        display none !important
.mobile-visible
    display none !important
    @media MOBILE
        display block !important
.tablet-hidden
    display block !important
    @media TABLET
        display none !important
.tablet-visible
    display none !important
    @media TABLET
        display block !important
.normal-visible
    display block !important
    @media TABLET
        display none !important
    @media MOBILE
        display none !important

