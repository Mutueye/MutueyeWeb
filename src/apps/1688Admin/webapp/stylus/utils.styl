//full-width img container
.full-img
    display block
    img
        width 100%
        height auto
        display block
        float left
    &:before
        content ""
        display table
    &:after
        content ""
        display table
        clear both

.full-abs-img
    img
        width 100%
        height 100%
        display block
    &:before
        content ""
        display table
    &:after
        content ""
        display table
        clear both

