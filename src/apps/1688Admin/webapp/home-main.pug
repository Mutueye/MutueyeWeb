block content
    .container.row-space-common
        .row.top-row
            .col-sm-12.col-md-8
                include ../components/system-list/index
                .section-title
                    span.section-title-icon
                    span.section-title-text 待办事项
            .col-sm-12.col-md-4
                .section-title
                    span.section-title-icon
                    span.section-title-text 通知公告
                include ../components/news-list/index
                .section-title.mt-space
                    span.section-title-icon
                    span.section-title-text 园区企业分布
                .abs-container.abs-hp-1of2
                    .abs-content
                        div#chart01(style="width:100%;height:100%")
                .section-title.mt-space
                    span.section-title-icon
                    span.section-title-text 园区行业分布
                .abs-container.abs-hp-1of2
                    .abs-content
                        div#chart02(style="width:100%;height:100%")
                .section-title.mt-space
                    span.section-title-icon
                    span.section-title-text 园区面积分布
                .abs-container.abs-hp-1of2
                    .abs-content
                        img(src=IMG_DIR + "map.jpg" style="width:100%;height:100%")
            //
                .col-sm-8.col-xs-12.abs-container.abs-hp-1of3.abs-hp-mobile-1of2
                    .abs-content
                        div#chart01(style="width:100%;height:100%")
                .col-sm-4.col-xs-12.abs-container.abs-hp-2of3
                    .abs-content.bg-green
                .col-sm-3.col-xs-12.abs-container.abs-hp-1of1
                    .abs-content.bg-blue
                .col-sm-9.col-xs-12.abs-container.abs-hp-1of3
                    .abs-content.bg-red
                    
            
