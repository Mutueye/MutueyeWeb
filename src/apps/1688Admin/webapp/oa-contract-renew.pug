extends layout

block css
    link(rel='stylesheet', href=CSS_DIR + 'font-awesome.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-datetimepicker.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-table.min.css')
    link(rel='stylesheet', href=JS_DIR + 'bootstrap-fileinput/css/fileinput.min.css')
    link(rel='stylesheet', href=JS_DIR + 'bootstrap-fileinput/css/theme.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'toastr.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'index.css')

block content
    .container-fluid.row-space-common
        .row.mt-space
            .col-xs-12
                .page-title 
                    |合同续签
                    a.btn.btn-sm.btn-theme.pull-right(href="oa-contract.html")
                        i.fa.fa-undo
                        |&nbsp;返回
            .col-xs-12.row-space-10
                form.row.no-bottom
                    .col-xs-12
                        .form-group.cool-form-group.form-group-sm
                            .cool-form-label.text-right.control-label 合同名称：
                            input.form-control(type="text" value='2018年预算内基础设备采购合同')
                    .col-xs-12.col-sm-6
                        .form-group.cool-form-group.form-group-sm
                            .cool-form-label.text-right.control-label 合同种类：
                            select.form-control
                                option 种类A
                                option(selected) 种类B
                    .col-xs-12.col-sm-6
                        .form-group.cool-form-group.form-group-sm
                            .cool-form-label.text-right.control-label 合同类型：
                            select.form-control
                                option 类型A
                                option(selected) 类型B
                    .col-xs-12
                        .form-group.cool-form-group.form-group-sm
                            .cool-form-label.text-right.control-label 内容摘要：
                            textarea.form-control.textarea(rows='3') 预算内采购合同
                    .col-xs-12
                        .form-group.cool-form-group.form-group-sm
                            .cool-form-label.text-right.control-label 上传附件：
                            input.form-control#file_contract(type="file" multiple)
                    .col-xs-12
                        .btn.btn-large.btn-theme
                            i.fa.fa-edit
                            |&nbsp;续签
                        .btn.btn-large.btn-theme
                            i.fa.fa-save
                            |&nbsp;保存
                    

                    
