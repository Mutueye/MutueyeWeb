block content
    .container-fluid.row-space-common
        .row.mt-space
            .col-xs-12
                .page-title
                    |先锋故事审核
                    a.btn.btn-sm.btn-theme.pull-right(href="party-learn-story-commit.html")
                        i.fa.fa-undo
                        |&nbsp;返回 
            .col-xs-12
                .box-form
                    .article-title 文章标题
                    .article-info
                        .article-info-item 作者：Admin
                        .article-info-item 发布时间：2017.09.18 13:40
                    .article-content
                        p 文章内容
            .col-xs-12.row-space-10
                form.row.no-bottom
                    .col-sm-12.col-md-12
                        .btn.btn-large.btn-theme#btn_ok
                            i.fa.fa-check
                            |&nbsp;审核通过
                        .btn.btn-large.bg-red.bg-hover-darken.font-white#btn_no
                            i.fa.fa-remove
                            |&nbsp;审核不通过


                    
