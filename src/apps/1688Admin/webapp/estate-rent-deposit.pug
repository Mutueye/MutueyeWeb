extends layout

block css
    link(rel='stylesheet', href=CSS_DIR + 'font-awesome.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-table.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'bootstrap-datetimepicker.min.css')
    link(rel='stylesheet', href=JS_DIR + 'bootstrap-fileinput/css/fileinput.min.css')
    link(rel='stylesheet', href=JS_DIR + 'bootstrap-fileinput/css/theme.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'toastr.min.css')
    link(rel='stylesheet', href=CSS_DIR + 'index.css')

block content
    .container-fluid.row-space-common
        .row.mt-space
            .col-xs-12
                .page-title 租赁押金管理
            .col-xs-12
                .box-form.has-title.row-space-10
                    .box-form-title 查询条件
                    form#query_form.row.no-bottom(name='query_form')
                        .col-xs-12
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 企业名称：
                                input.form-control(type="text")
                        .col-xs-12.col-sm-6
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 缴费类型：
                                select.form-control
                                    option 正常缴纳
                                    option 其他
                        .col-xs-12.col-sm-6
                            .form-group.cool-form-group.form-group-sm
                                .cool-form-label.text-right.control-label 缴费时间：
                                .input-group.date#rent_time
                                    input.form-control(type="text")
                                    .btn.btn-line.input-group-addon
                                        i.fa.fa-calendar
                        .col-xs-12
                            .btn.btn-line.btn-small
                                i.fa.fa-search
                                |&nbsp;查询
            .col-xs-12
                .toolbar#toolbar
                    .btn.btn-theme#toolbtn_new
                        i.fa.fa-plus
                        |&nbsp;新增
                    .btn.btn-theme#toolbtn_edit
                        i.fa.fa-edit
                        |&nbsp;编辑
                    .btn.btn-theme#toolbtn_preview
                        i.fa.fa-eye
                        |&nbsp;查看
                    .btn.btn-theme#toolbtn_refund
                        i.fa.fa-money
                        |&nbsp;退款
                    .btn.btn-theme#toolbtn_remove
                        i.fa.fa-remove
                        |&nbsp;删除
                table#table

                    
block js
    script(src=JS_DIR + 'jquery.min.js')
    script(src=JS_DIR + 'bootstrap.min.js')
    script(src=JS_DIR + 'moment/moment.min.js')
    script(src=JS_DIR + 'moment/zh-cn.js')
    script(src=JS_DIR + 'bootstrap-datetimepicker.min.js')
    script(src=JS_DIR + 'bootstrap-table/bootstrap-table.min.js')
    script(src=JS_DIR + 'bootstrap-table/bootstrap-table-zh-CN.min.js')
    script(src=JS_DIR + 'bootstrap-table/bootstrap-table-export.min.js')
    script(src=JS_DIR + 'tableExport.min.js')
    script(src=JS_DIR + 'bootstrap-fileinput/fileinput.min.js')
    script(src=JS_DIR + 'bootstrap-fileinput/zh.js')
    script(src=JS_DIR + 'bootstrap-fileinput/theme.min.js')
    script(src=JS_DIR + 'toastr.min.js')
    script(src=JS_DIR + 'BSModal.js')
    script(src=JS_DIR + 'common.js')
    script(src=JS_DIR + 'app.js')
    script(type='text/javascript').
        $(document).ready(function(){
            
            var $rentTime = $('#rent_time');
            
            var $btn_new = $('#toolbtn_new');
            var $btn_edit = $('#toolbtn_edit');
            var $btn_preview = $('#toolbtn_preview');
            var $btn_refund = $('#toolbtn_refund');
            var $btn_remove = $('#toolbtn_remove');
            var $btn_edit = $('#toolbtn_edit');
            var $table = $('#table');
            
            window.commonTools.setDateTimeInput($rentTime);
            
            $table.bootstrapTable({
                toolbar : '#toolbar',
                showColumns : true,
                showToggle : true,
                showExport : true,
                pagination : true,
                showPaginationSwitch : false,
                clickToSelect : true,
                columns: [
                    {
                        field: 'check',
                        checkbox: true,
                        align: 'center',
                        valign: 'middle'
                    },
                    {
                        field: 'id',
                        title: '序号',
                        sortable: true,
                        halign: 'center',
                        align: 'right',
                        width: 30
                    }, 
                    {
                        field: 'orgname',
                        title: '企业名称',
                        halign: 'center'
                    }, 
                    {
                        field: 'legal_person',
                        title: '法人代表',
                        halign: 'center'
                    }, 
                    {
                        field: 'phone',
                        title: '联系电话',
                        halign: 'center'
                    },
                    {
                        field: 'fee_type',
                        title: '缴费类型',
                        sortable: true,
                        halign: 'center'
                    }, 
                    {
                        field: 'fee',
                        title: '缴纳金额(元)',
                        halign: 'center',
                        align: 'right'
                    },
                    {
                        field: 'fee_time',
                        title: '缴费时间',
                        halign: 'center',
                        align: 'center'
                    },
                    {
                        field: 'state',
                        title: '状态',
                        halign: 'center'
                    },
                    {
                        field: 'refund_fee',
                        title: '退款金额(元)',
                        halign: 'center',
                        align: 'right'
                    },
                    {
                        field: 'refund_time',
                        title: '退款时间',
                        halign: 'center',
                        align: 'center'
                    }
                ],
                data: [
                    {
                        id : 1,
                        orgname : '企业名称1',
                        legal_person : '王先生',
                        phone : '13812345678',
                        fee_type : '正常缴纳',
                        fee : '2300.00',
                        fee_time : '2018-09-09',
                        state : '在账'
                    },
                    {
                        id : 2,
                        orgname : '企业名称2',
                        legal_person : '李先生',
                        phone : '13592837491',
                        fee_type : '其他',
                        fee : '4500.00',
                        fee_time : '2018-03-12',
                        state : '已退',
                        refund_fee : '3100.00',
                        refund_time : '2018-02-21'
                    }
                ]
            });
            
            //设置工具栏按钮禁用状态
            setToolBtnDisableState();
            $table.on('check.bs.table uncheck.bs.table check-all.bs.table uncheck-all.bs.table', function () {
                setToolBtnDisableState();
            });
            
            //新增&编辑弹窗的表单模板
            var modalHtml = "<div class='row-space-10'>" +
                                "<div class='row no-bottom'>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>押金类型：</div>" +
                                            "<select class='form-control' id='deposit_type'>" +
                                            "</select>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>企业名称：</div>" +
                                            "<input class='form-control' type='text' id='orgname'>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>法人代表：</div>" +
                                            "<input class='form-control' type='text' id='legal_person'>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>联系电话：</div>" +
                                            "<input class='form-control' type='text' id='phone'>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>缴纳金额：</div>" +
                                            "<div class='input-group'>" +
                                                "<input class='form-control' type='text' id='fee'>" + 
                                                "<div class='input-group-addon'>元</div>" +
                                            "</div>" +
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>上传附件：</div>" +
                                            "<input class='form-control input-file' id='input_appendix' type='file' multiple>" +
                                        "</div>" +
                                    "</div>" +
                                "</div>" +
                            "</div>";
            
            //预览弹窗的表单模板
            var modalPreviewHtml = "<div class='row-space-10'>" +
                                "<div class='row no-bottom'>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>押金类型：</div>" +
                                            "<div class='cool-form-content'>正常缴费</div>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>企业名称：</div>" +
                                            "<div class='cool-form-content'>海尔</div>" + 
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>法人代表：</div>" +
                                            "<div class='cool-form-content'>王小二</div>" +
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>缴费金额：</div>" +
                                            "<div class='cool-form-content'>2041元</div>" +
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>缴费时间：</div>" +
                                            "<div class='cool-form-content'>2017-12-13</div>" +
                                        "</div>" +
                                    "</div>" +
                                    "<div class='col-xs-12'>" +
                                        "<div class='form-group form-group-sm cool-form-group'>" +
                                            "<div class='control-label cool-form-label text-right'>缴费状态：</div>" +
                                            "<div class='cool-form-content'>在账</div>" + 
                                        "</div>" +
                                    "</div>" +
                                "</div>" +
                            "</div>";
            
            //弹窗初始化后，给表单赋初始值,type区分新增或编辑
            function modalInit(type){
                
                //获取押金类型选项，此处直接给出用户前端展示
                var depositTypeOptionData = [
                    {
                        value:'正常缴纳',
                        text:'正常缴纳'
                    },
                    {
                        value:'其他',
                        text:'其他'
                    }
                ];
                window.commonTools.addSelectOptions($('#deposit_type'), depositTypeOptionData);
                
                if(type == '新增') {
                    window.commonTools.initBSFileInput($('#input_appendix'));
                } else if(type == '编辑') {
                    window.commonTools.initBSFileInput($('#input_appendix'), true);
                }
            }
            
            
            //新增
            $btn_new.click(function () {
                
                BSModal.confirm({
                    title : '新增',
                    content : modalHtml,
                    width : '600px',
                    maxHeight : '400px',
                    btnOKDismiss : false,
                    btnOK : '提交',
                    afterInit: function(){
                        modalInit('新增');
                    }
                }).on(function(e, id) {
                    if (!e) {
                        return;
                    }
                    //提交成功后，刷新表格数据:
                    //$table.bootstrapTable('load', data);
                    
                    $('#'+id).modal('hide');
                    toastr.success('您新增的数据已提交！');
                });
            });
            
            //编辑
            $btn_edit.click(function () {
                if(!$(this).attr('disabled')) {
                    //取表格的选中行数据
                    var arrselections = $table.bootstrapTable('getSelections');
                    if (arrselections.length <= 0) {
                        toastr.warning('请选择有效数据');
                        return;
                    }
                    console.log(JSON.stringify(arrselections));
                    
                    BSModal.confirm({
                        title : '编辑',
                        content : modalHtml,
                        width : '600px',
                        maxHeight : '400px',
                        btnOKDismiss : false,
                        btnOK : '提交',
                        afterInit: function(){
                            modalInit('编辑');
                        }
                    }).on(function(e, id) {
                        if (!e) {
                            return;
                        }
                        //提交成功后，刷新表格数据:
                        //$table.bootstrapTable('load', data);
                        
                        $('#'+id).modal('hide');
                        toastr.success('您编辑的数据已提交！');
                        
                    });
                }
            });
            
            //查看
            $btn_preview.click(function () {
                if(!$(this).attr('disabled')) {
                    //取表格的选中行数据
                    var arrselections = $table.bootstrapTable('getSelections');
                    if (arrselections.length <= 0) {
                        toastr.warning('请选择有效数据');
                        return;
                    }
                    console.log(JSON.stringify(arrselections));
                    
                    BSModal.confirm({
                        title : '查看',
                        content : modalPreviewHtml,
                        width : '600px',
                        maxHeight : '400px',
                        btnOKDismiss : true,
                        btnOK : '确定',
                        btnCancel: ''
                    });
                }
            });
            
            //退款
            $btn_refund.click(function () {
                if(!$(this).attr('disabled')) {
                    //取表格的选中行数据
                    var arrselections = $table.bootstrapTable('getSelections');
                    if (arrselections.length <= 0) {
                        toastr.warning('请选择有效数据');
                        return;
                    }
                    console.log(JSON.stringify(arrselections));
                    
                    //跳转到退款页面
                    window.location.href='estate-rent-deposit-refund.html';
                }
            });
            
            //删除
            $btn_remove.click(function () {
                //按钮如果不是disabled状态,则可进行操作
                if(!$(this).attr('disabled')) {
                    //取表格的选中行数据
                    var arrselections = $table.bootstrapTable('getSelections');
                    if (arrselections.length <= 0) {
                        toastr.warning('请选择有效数据');
                        return;
                    }
 
                    BSModal.confirm({ content: "确认要删除选择的数据吗？" }).on(function (e) {
                        if (!e) {
                            return;
                        }
                        
                        //ajax删除数据...
                        
                        //此处仅是前端演示删除后的效果：删除表格条目，重置工具栏状态，显示删除成功的提示
                        var ids = getIdSelections();
                        $table.bootstrapTable('remove', {
                            field: 'id',
                            values: ids
                        });
                        setToolBtnDisableState();
                        toastr.success('删除的数据已提交成功！');
                        
                    });
                }
            });
            
            function getIdSelections() {
                return $.map($table.bootstrapTable('getSelections'), function (row) {
                    return row.id
                });
            }
            
            function setToolBtnDisableState() {
                var tableSelections = $table.bootstrapTable('getSelections')
                $btn_remove.attr('disabled', !tableSelections.length);
                $btn_edit.attr('disabled', tableSelections.length != 1);
                $btn_preview.attr('disabled', tableSelections.length != 1);
                //退款：单选且非‘已退’状态时，按钮才可用可操作
                $btn_refund.attr('disabled', tableSelections.length != 1 || (tableSelections.length == 1 && tableSelections[0].state == '已退'));
            }
            
        });



